from Globals import *

class Button(font.Font):
    def __init__(self, font, size, text):
        super().__init__(font, size)
        self.text = text
    
    def get_surface(self, screen):
        pass

class Label(font.Font):
    def __init__(self, font, size: float, text: str):
        super().__init__(font, size)
        self.text = text

    def draw_text(self, screen: Surface, pos: tuple) -> None:
        surface = self.render(self.text)
        screen.blit(surface, pos)


